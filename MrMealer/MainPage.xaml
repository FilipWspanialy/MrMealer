<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrMealer.MainPage"
             Title="MrMealer"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="👋 Welcome in MrMealer!"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryColor}"
                   HorizontalTextAlignment="Center" />

            <Label Text="Your plan, your shopping, zero stress."
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalTextAlignment="Center" />

            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   Margin="0,10">
                <Label Text="Plan your meals, and MrMealer will automatically create your shopping list. Simple, fast, and delicious – all in one place."
                       FontSize="16"
                       TextColor="#555"
                       HorizontalTextAlignment="Center" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
