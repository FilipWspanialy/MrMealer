<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MrMealer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MrMealer"
    xmlns:views="clr-namespace:MrMealer.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MrMealer">
    
    <FlyoutItem Title="Home" Icon="home.png">
        <Tab>
            <ShellContent 
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}" 
                Route="mainPage" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Plan">
        <Tab>
            <ShellContent 
                Title="Plan"
                ContentTemplate="{DataTemplate views:PlanPage}"/>
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Shopping list">
        <Tab>
            <ShellContent 
                Title="Shopping list"
                ContentTemplate="{DataTemplate views:ShoppingListPage}" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Recipes">
        <Tab>
            <ShellContent 
                Title="Recipes"
                ContentTemplate="{DataTemplate views:RecipesPage}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="User">
        <Tab>
            <ShellContent 
            Title="User"/>
        </Tab>
    </FlyoutItem>
</Shell>
