<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MrMealer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MrMealer"
    xmlns:views="clr-namespace:MrMealer.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MrMealer">

    <FlyoutItem Title="Home" Icon="home.png">
        <Tab>
            <ShellContent
                Title="Home"
                Route="home"
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Plan" Icon="plan.png">
        <Tab>
            <ShellContent
                Title="Plan"
                Route="plan"
                ContentTemplate="{DataTemplate views:PlanPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Shopping List" Icon="shopping_list.png">
        <Tab>
            <ShellContent
                Title="Shopping List"
                Route="shoppingList"
                ContentTemplate="{DataTemplate views:ShoppingListPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Recipes" Icon="recipes.png">
        <Tab>
            <ShellContent
                Title="Recipes"
                Route="recipes"
                ContentTemplate="{DataTemplate views:RecipesPage}" />
        </Tab>
    </FlyoutItem>
</Shell>