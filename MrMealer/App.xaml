<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrMealer.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Kolory -->
            <Color x:Key="SecondaryColor">#60A5FA</Color>
            <Color x:Key="BackgroundColor">#F9FAFB</Color>
            <Color x:Key="TextColor">#111827</Color>
            <Color x:Key="MutedText">#6B7280</Color>
            <Color x:Key="PrimaryColor">#4CAF50</Color>


            <!-- Style Labeli -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="LineBreakMode" Value="WordWrap" />
            </Style>

            <Style x:Key="HeaderLabel" TargetType="Label">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="Margin" Value="0,10,0,5" />
            </Style>

            <!-- Style przycisków -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="12,0" />
                <Setter Property="Margin" Value="0,5" />
            </Style>

            <!-- Style Entry -->
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,5" />
                <Setter Property="PlaceholderColor" Value="{StaticResource MutedText}" />
            </Style>

            <!-- Style Editor -->
            <Style TargetType="Editor">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="120" />
                <Setter Property="Margin" Value="0,5" />
                <Setter Property="PlaceholderColor" Value="{StaticResource MutedText}" />
            </Style>

            <!-- Style Frame -->
            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="12" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Margin" Value="10,5" />
            </Style>

            <!-- Style Picker -->
            <Style TargetType="Picker">
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="Margin" Value="0,5" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <!-- Style CheckBox -->
            <Style TargetType="CheckBox">
                <Setter Property="Color" Value="{StaticResource PrimaryColor}" />
                <Setter Property="Margin" Value="0,5" />
            </Style>

            <!-- CollectionView separator -->
            <Style TargetType="CollectionView">
                <Setter Property="Margin" Value="0,5" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>

