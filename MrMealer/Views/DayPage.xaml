<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MrMealer.ViewModels"
             x:Class="MrMealer.Views.DayPage"
             Title="DayPage">
    <CollectionView ItemsSource="{Binding Meals}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout>
                    <Label Text="{Binding Name}" />

                    <Picker Title="Choose recipe"
                        ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type vm:DayViewModel}}, Path=Recipes}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedIndexChanged="OnRecipeSelected" />

                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>