<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MrMealer.ViewModels"
             x:Class="MrMealer.Views.DayPage"
             x:Name="DayEditPage"
             Title="Edit Day">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Edit meals for the day" FontSize="Medium" FontAttributes="Bold"/>

            <CollectionView ItemsSource="{Binding Meals}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="10">
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>

                            <Picker Title="Select recipe"
                                    ItemsSource="{Binding Source={x:Reference DayEditPage}, Path=BindingContext.Recipes}"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedItem="{Binding SelectedRecipe}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Save Changes" Command="{Binding SaveMealsCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
