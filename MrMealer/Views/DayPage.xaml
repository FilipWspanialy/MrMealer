<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MrMealer.ViewModels"
             x:Class="MrMealer.Views.DayPage"
             x:Name="DayEditPage"
             Title="Edytuj Dzień"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Nagłówek -->
            <Label Text="🍽️ Edytuj posiłki"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryColor}"
                   HorizontalTextAlignment="Center" />

            <!-- Lista posiłków -->
            <CollectionView ItemsSource="{Binding Meals}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="16"
                               Padding="16"
                               Margin="0,8"
                               HasShadow="True">

                            <VerticalStackLayout Spacing="12">

                                <!-- Nazwa posiłku -->
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="#333" />

                                <!-- Wybór przepisu -->
                                <Picker Title="Wybierz przepis"
                                        ItemsSource="{Binding Source={x:Reference DayEditPage}, Path=BindingContext.Recipes}"
                                        ItemDisplayBinding="{Binding Name}"
                                        SelectedItem="{Binding SelectedRecipe}"
                                        FontSize="14"
                                        BackgroundColor="#f3f4f6"
                                        TextColor="Black"
                                        HeightRequest="40"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Zapisz zmiany -->
            <Button Text="💾 Zapisz zmiany"
                    Command="{Binding SaveMealsCommand}"
                    BackgroundColor="#10b981"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
