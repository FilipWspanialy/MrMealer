<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MrMealer.ViewModels"
             x:Class="MrMealer.Views.RecipeAddPage"
             x:Name="IngredientPickerPage"
             Title="Dodaj Przepis"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Nagłówek -->
            <Label Text="Dodaj Nowy Przepis"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{StaticResource PrimaryColor}" />

            <!-- Nazwa przepisu -->
            <Entry Placeholder="Nazwa przepisu"
                   Text="{Binding RecipeName}"
                   FontSize="16"
                   BackgroundColor="White"
                   TextColor="Black"
                   HeightRequest="50"/>

            <!-- Instrukcje -->
            <Editor Placeholder="Instrukcje"
                    Text="{Binding Instructions}"
                    AutoSize="TextChanges"
                    BackgroundColor="White"
                    TextColor="Black"
                    HeightRequest="120" />

            <!-- Nagłówek składników -->
            <Label Text="🧂 Składniki:"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="{StaticResource PrimaryColor}" />

            <!-- Lista składników -->
            <CollectionView ItemsSource="{Binding Ingredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               BorderColor="#e0e0e0"
                               BackgroundColor="White"
                               CornerRadius="16"
                               Padding="12"
                               Margin="0,5">

                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                                <!-- Picker składnika -->
                                <Picker WidthRequest="150"
                                        ItemsSource="{Binding Source={x:Reference IngredientPickerPage}, Path=BindingContext.AvailableIngredients}"
                                        ItemDisplayBinding="{Binding Name}"
                                        SelectedItem="{Binding SelectedIngredient}" />

                                <!-- Ilość / miara -->
                                <Entry Placeholder="Miara"
                                       Text="{Binding Measure}"
                                       WidthRequest="100"
                                       BackgroundColor="#f3f4f6"
                                       HeightRequest="40"/>

                                <!-- Usuń składnik -->
                                <Button Text="❌"
                                        Command="{Binding RemoveCommand}"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        BackgroundColor="#ef4444"
                                        TextColor="White"
                                        CornerRadius="20"
                                        FontSize="16"
                                        Padding="0"
                                        VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Dodaj składnik -->
            <Button Text="➕ Dodaj Składnik"
                    Command="{Binding AddIngredientCommand}"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    HeightRequest="50" />

            <!-- Zapisz przepis -->
            <Button Text="💾 Zapisz Przepis"
                    Command="{Binding SaveRecipeCommand}"
                    BackgroundColor="#10b981"
                    TextColor="White"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>