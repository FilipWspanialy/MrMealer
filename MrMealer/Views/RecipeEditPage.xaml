<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MrMealer.ViewModels"
             x:Class="MrMealer.Views.RecipeEditPage"
             x:Name="IngredientPickerPage"
             Title="Edytuj Przepis"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Edytuj Przepis"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource PrimaryColor}" />

            <Entry Placeholder="Nazwa przepisu"
                   Text="{Binding RecipeName}"
                   FontSize="16"
                   BackgroundColor="White"
                   TextColor="Black"
                   Margin="0,5"
                   HeightRequest="50"/>

            <Editor Placeholder="Instrukcje"
                    Text="{Binding Instructions}"
                    AutoSize="TextChanges"
                    BackgroundColor="White"
                    TextColor="Black"
                    Margin="0,5"
                    HeightRequest="120" />

            <Label Text="Składniki:"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="{StaticResource PrimaryColor}"
                   Margin="0,10,0,0" />

            <CollectionView ItemsSource="{Binding Ingredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               BorderColor="#e0e0e0"
                               BackgroundColor="White"
                               CornerRadius="16"
                               Padding="12"
                               Margin="0,5">

                            <HorizontalStackLayout Spacing="10"
                       VerticalOptions="Center"
                       HorizontalOptions="FillAndExpand">

                                <Picker 
                                    ItemsSource="{Binding Source={x:Reference IngredientPickerPage}, Path=BindingContext.AvailableIngredients}"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedItem="{Binding SelectedIngredient}"
                                    HorizontalOptions="FillAndExpand" />

                                <Entry 
                                    Placeholder="Miara"
                                    Text="{Binding Measure}"
                                    WidthRequest="80"
                                    BackgroundColor="#f3f4f6"
                                    HeightRequest="40"
                                    HorizontalOptions="Start" />

                                <Button 
                                    Text="❌"
                                    Command="{Binding RemoveCommand}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    BackgroundColor="#ef4444"
                                    TextColor="White"
                                    CornerRadius="20"
                                    FontSize="16"
                                    Padding="0"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="➕ Dodaj Składnik"
                    Command="{Binding AddIngredientCommand}"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    HeightRequest="50" />

            <Button Text="💾 Zapisz Przepis"
                    Command="{Binding SaveChangesCommand}"
                    BackgroundColor="#10b981"
                    TextColor="White"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>